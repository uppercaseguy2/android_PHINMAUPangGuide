            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:text="For Bank Deposit Payment: "
                android:textSize="20sp"
                android:textColor="@color/upang_blue"
                android:singleLine="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Account Name: PHINMA UNIVERSITY OF PANGASINAN, INC.
\n\nRCBC Account Number: 9005208703

\n\nCHINABANK Account Number: 3690102713"
