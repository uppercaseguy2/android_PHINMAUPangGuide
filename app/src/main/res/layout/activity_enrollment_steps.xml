            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingVertical="10dp"
                android:text="Step 3:"
                android:textColor="@color/upang_blue"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Kindly send your proof of payment to this link: "
                android:textColor="@color/black"
                android:textSize="16sp"
                />
            <TextView
                android:id="@+id/link_proof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="https://bit.ly/UPPaymentForm2122"
                android:textColor="@color/upang_green"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingVertical="10dp"
                android:text="Step 4:"
                android:textColor="@color/upang_blue"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="Receive your Student Number and Schedule through email address provided in your registration."
                android:textSize="16sp"
                android:textColor="@color/black"

                />
