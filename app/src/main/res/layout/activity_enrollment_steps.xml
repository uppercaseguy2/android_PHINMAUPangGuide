                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:text="For Gcash Payment: "
                android:textSize="20sp"
                android:textColor="@color/upang_blue"
                android:singleLine="false"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:text="BILLER NAME: PHINMA UNIVERSITY OF PANGASINAN or PHINMA UPANG COLLEGE OF URDANETA
\n\nStudent Number: Please use the provided Admission Number"
                android:textColor="@color/black"
